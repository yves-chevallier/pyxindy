;; The rest

(require "lang/german/din5007.xdy")
(require "class/pagenums.xdy")

;; The markup (no letter groups)

(markup-indexentry-list :sep "~n")
(markup-locclass-list :open " ")
(markup-range :sep "-")
(markup-locref-list :sep ", ")

(define-attributes (("default")))
